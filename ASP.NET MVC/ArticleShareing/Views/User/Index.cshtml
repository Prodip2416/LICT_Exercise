@model IEnumerable<BDJArticle15.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Basic Info
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
           Security Info
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender.Name)
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name) <br />
            @Html.DisplayFor(modelItem => item.Email) <br />
            @Html.DisplayFor(modelItem => item.Contact)
        </td>
        <td>
            <img src="../uploads/userImage/@(item.id.ToString() + "_" + item.Image)" height="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateOfBirth) <br />
        
            @Html.DisplayFor(modelItem => item.joinDate) <br />
       
            @Html.DisplayFor(modelItem => item.IP)
        </td>
        <td>
            <address>
                @Html.DisplayFor(modelItem => item.Address)<br />
                <b>@Html.DisplayFor(modelItem => item.City.Name)</b>
            </address>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender.Name)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
